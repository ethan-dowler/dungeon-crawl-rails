<%= render HeadingComponent.new(title: "Dungeons", tag: :h2) %>

<% DungeonTemplate.all.each do |dungeon_template| %>
  <div class="mb-2 flex items-center justify-between">
    <%= dungeon_template.name %>

    <%=
      button_to(
        "Enter",
        dungeon_runs_path(
          character_id: character.id,
          dungeon_template_id: dungeon_template.id
        ),
        class: "Button",
        data: { "turbo-disable": "Entering..." }
      )
    %>
  </div>
<% end %>

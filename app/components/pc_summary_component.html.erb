<%= turbo_frame_tag :player_character_summary do %>
  <%# TODO: turn this panel into a link that goes to a character management page (tabs for inventory, perks, stat details, etc.) %>
  <div class="PcSummary">
    <div class="PcSummary-name">
      <%= name %>
      <span class="PcSummary-level">
        Lvl. <%= level %>
      </span>
    </div>

    <%= render(
      ProgressBarComponent.new(
        name: :player_hp,
        label: "HP",
        previous_value: previous_hp,
        current_value: current_hp,
        max_value: max_hp,
        color: :red,
        variant: :thin,
        show_value: true
      )
    ) %>

    <%#= render(
      ProgressBarComponent.new(
        name: :player_xp,
        label: "XP",
        previous_value: previous_xp_progress_to_next_level,
        current_value: xp_progress_to_next_level,
        max_value: xp_needed_from_current_to_next_level,
        color: :black,
        variant: :thin,
        show_value: true
      )
    ) %>
  </div>
<% end %>
